<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodegradado"
    tools:context=".actualizarDatos">


    <TextView
        android:id="@+id/lbRutActualDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuzzybubbles"
        android:text="Rut: "
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbPasswordActualizar"
        app:layout_constraintVertical_bias="0.052" />

    <TextView
        android:id="@+id/lbNombreActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuzzybubbles"
        android:text="Nombre: "
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/lbRutActualDatos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbRutActualDatos"
        app:layout_constraintTop_toBottomOf="@+id/lbRutActualDatos" />

    <TextView
        android:id="@+id/NombreMostrarEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuzzybubbles"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbNombreActual"
        app:layout_constraintStart_toEndOf="@+id/lbNombreActual"
        app:layout_constraintTop_toTopOf="@+id/lbNombreActual"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/RutMostrarEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuzzybubbles"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbRutActualDatos"
        app:layout_constraintStart_toEndOf="@+id/lbRutActualDatos"
        app:layout_constraintTop_toTopOf="@+id/lbRutActualDatos"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lbApellidoActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuzzybubbles"
        android:text="Apellido: "
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/lbNombreActual"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbNombreActual"
        app:layout_constraintTop_toBottomOf="@+id/lbNombreActual" />

    <TextView
        android:id="@+id/ApellidoMostrarEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuzzybubbles"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbApellidoActual"
        app:layout_constraintStart_toEndOf="@+id/lbApellidoActual"
        app:layout_constraintTop_toTopOf="@+id/lbApellidoActual"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lbFechaActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuzzybubbles"
        android:text="Fecha de nacimiento: "
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/lbApellidoActual"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbApellidoActual"
        app:layout_constraintTop_toBottomOf="@+id/lbApellidoActual" />


    <TextView
        android:id="@+id/FechaMostrarEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuzzybubbles"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbFechaActual"
        app:layout_constraintStart_toEndOf="@+id/lbFechaActual"
        app:layout_constraintTop_toTopOf="@+id/lbFechaActual" />

    <TextView
        android:id="@+id/lbCorreoActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuzzybubbles"
        android:text="Correo: "
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/NombreMostrarEdit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbFechaActual"
        app:layout_constraintTop_toBottomOf="@+id/lbFechaActual" />

    <TextView
        android:id="@+id/CorreoMostrarEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuzzybubbles"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbCorreoActual"
        app:layout_constraintStart_toEndOf="@+id/lbCorreoActual"
        app:layout_constraintTop_toTopOf="@+id/lbCorreoActual"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textColorHint="@color/ColorHind"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbCorreoActual"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/EditTxtRut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/colordegradadoinput"
            android:drawableStart="@drawable/rut_icono"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/fuzzybubbles"
            android:hint="Ingrese nuevo rut"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/ColorHind"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="254dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/ColorHind"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout6"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout6"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout6"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/EditTxtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/colordegradadoinput"
            android:drawableStart="@drawable/nombre_icono"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/fuzzybubbles"
            android:hint="Ingrese nuevo nombre"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/ColorHind" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/ColorHind"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout5"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout5"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/EditTxtApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/colordegradadoinput"
            android:drawableStart="@drawable/apellido_icono"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/fuzzybubbles"
            android:hint="Ingrese nuevo apellido"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/ColorHind" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/ColorHind"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/EditTxtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/colordegradadoinput"
            android:clickable="true"
            android:drawableStart="@drawable/calendario_icono"
            android:drawablePadding="10dp"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/fuzzybubbles"
            android:hint="Ingrese nueva fecha"
            android:importantForAutofill="no"
            android:inputType="date"
            android:maxLines="1"
            android:onClick="FechaNacimientoEdit"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/ColorHind" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/lbPasswordActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuzzybubbles"
        android:text="Actualizar los datos"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/btnActualizarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/colordegradado"
        android:fontFamily="@font/fuzzybubbles"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:text="Actualizar datos"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout3"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout3"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>