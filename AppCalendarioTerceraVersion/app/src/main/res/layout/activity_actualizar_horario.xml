<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodegradado"
    tools:context=".ActualizarHorarios.Actualizar_Horario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/ColorHind"
            app:hintEnabled="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:fontFamily="@font/fuzzybubbles"
                android:text="Actualizar Horario"
                android:textColor="@color/white"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/txtHoraHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fuzzybubbles"
                android:text="--"
                android:visibility="gone"
                tools:visibility="gone"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/txtidHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fuzzybubbles"
                android:text="--"
                android:visibility="gone"
                tools:visibility="gone"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtUidUsuarioAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fuzzybubbles"
                android:text="--"
                android:visibility="gone"
                tools:visibility="gone"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtCorreoIdAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fuzzybubbles"
                android:text="--"
                android:visibility="gone"
                tools:visibility="gone"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtFechaHoraActualAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/fuzzybubbles"
                android:text="--"
                android:visibility="gone"
                tools:visibility="gone"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtTipoAC"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/fuzzybubbles"
                android:text="Cambiar tipo de sesion"
                android:textColor="@color/white"/>

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/EditSesionAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/colorfondoinput"
            android:drawableStart="@drawable/sesion_icono"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/fuzzybubbles"
            android:hint="Ingresar tipo de sesion"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="@color/ColorHind"
            tools:ignore="SpeakableTextPresentCheck" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:textColorHint="@color/ColorHind">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/fuzzybubbles"
                android:textColor="@color/white"
                android:text="Cambiar nombre del paciente" />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/EditPacienteAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/colorfondoinput"
            android:drawableStart="@drawable/nombre_icono"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/fuzzybubbles"
            android:hint="Ingresar nombre de paciente"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="@color/ColorHind"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:textColorHint="@color/ColorHind">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/fuzzybubbles"
                android:textColor="@color/white"
                android:text="Informacion adicional" />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/EditInformacionAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:minHeight="140dp"
            android:gravity="start"
            android:background="@drawable/colorfondoinput"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/fuzzybubbles"
            android:hint="Informacion"
            android:textColor="@color/white"
            android:textColorHint="@color/ColorHind"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFechaHorarioAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/fuzzybubbles"
                android:background="@drawable/colordegradado2"
                app:icon="@drawable/calendarhorariofecha_icono"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:text="Fecha" />

            <TextView
                android:id="@+id/txtFechaHorarioAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:fontFamily="@font/fuzzybubbles"
                android:textColorHint="@color/ColorHind"
                android:hint="00/00/0000"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/SPHoraHorarioAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/colorfondoinput"
                android:drawablePadding="10dp"
                android:fontFamily="@font/fuzzybubbles"
                android:hint="Ingresar Hora"
                android:minHeight="40dp"
                android:spinnerMode="dialog"
                android:textColor="@color/white"
                android:textColorHint="@color/ColorHind"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/HorarioPendiente"
                android:layout_marginTop="5dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:visibility="gone"
                android:background="#D8BD35" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/HorarioTerminado"
                android:layout_marginTop="5dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="5dp"
                android:visibility="gone"
                android:background="#21C531" />

            <TextView
                android:id="@+id/txtEstadoAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/fuzzybubbles"
                android:text="Pendiente"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/ColorHind"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            
            <Spinner
                android:id="@+id/Spinner_estado"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/estado_nuevo"
                android:text="--"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </androidx.appcompat.widget.LinearLayoutCompat>



    </LinearLayout>


</ScrollView>