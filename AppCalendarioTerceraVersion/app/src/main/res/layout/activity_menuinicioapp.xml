<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoaplicacion"
    tools:context=".Inicio">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/LogoAplicacion"
            android:layout_width="209dp"
            android:layout_height="193dp"
            android:layout_marginBottom="10dp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="20"
            android:shadowDy="50"
            android:shadowRadius="80"
            app:srcCompat="@drawable/logocalendario" />

        <TextView
            android:id="@+id/LoginPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/fuzzybubbles"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="ByDiary"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/Btn_Login"
            android:layout_width="130dp"
            android:layout_height="52dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/colordegradado"
            android:fontFamily="@font/fuzzybubbles"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="@string/Btn_Login"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/Btn_Registro"
            android:layout_width="150dp"
            android:layout_height="57dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/colordegradado"
            android:fontFamily="@font/fuzzybubbles"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="@string/Btn_Registro"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>